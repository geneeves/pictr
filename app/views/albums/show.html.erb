<h1><%= @album.name %></h1>
<div class="btn-group">
  <%= link_to "Edit Album", edit_album_path, :class => "btn btn-default" %>
  <%= link_to "Delete Album", album_path, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default"%>
  <%= link_to "Add a photo", new_photo_path(:photo => {album_id: @album.id}, :class => "btn btn-default"), :class => "btn btn-default" %>
</div>
<% @album.photos.each do |photo| %>
  <%= render photo %>
  <div class="btn-group">
    <%= link_to "Edit photo", edit_photo_path, :class => "btn btn-default" %>
    <%= link_to "Delete photo", photo_path, :method => :delete,  :data => { :confirm => 'Are you sure you want to delete this?' }, :class => "btn btn-default" %>
  </div>
<% end %>  
