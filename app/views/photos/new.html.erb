<h1>Add a photo</h1>
<% if @photo.errors.any? %>
  <h3>Please correct these problems:</h3>
  <ul>
    <% @photo.errors.full_messages.each do |message| %>
      <li class="alert alert-danger"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @photo do |f| %>
  <%= f.hidden_field :album_id %>
  <%= f.label :name, 'Image Name' %>
  <%= f.text_field :name %>
  <div class="new_form">
    <%= f.label :image, 'Upload File' %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Upload", :class => "btn btn-primary" %>
<% end %>